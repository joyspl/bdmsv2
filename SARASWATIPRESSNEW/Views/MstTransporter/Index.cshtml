@model IEnumerable<SARASWATIPRESSNEW.Models.MstTransporter>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BdmsLayoutPage.cshtml";
}
<script>
    function ExportToExcel() {
        var url = "/MstTransporter/ExportTransporterData";
        window.location.href = url;
    }
</script>
<div class="panel-heading">
    <h3 class="panel-title"><strong>Transporter Master</strong></h3>
</div>
<div class="panel-body">
<table id="tblBtn" cellpadding="0" class="table" cellspacing="0" border="0" style=" width:100%;">
    <tr>
        <td><a href="/MstTransporter/AddTransport" style="width: 120px;" class="btn btn-info btn-block">Add New</a></td>
        <td><input type="button" id="btnEmail" value="Export To Excel" onclick="ExportToExcel();" style="width: 120px" class="btn btn-info btn-block" /></td>
    </tr>
</table>
<table width="50%" border="0" align="center" class="table">
    <tr>
        <th style="text-align: left; width: 20%;">Transporter Name</th>
        <th style="text-align: left; width: 20%;">Transporter Address</th>
        <th style="text-align: left; width: 20%;">Transporter Phone No</th>
    </tr>
    @try
    {
        foreach (var objModel in Model)
        {
            <tr>
                <td style="text-align: left">
                    <input id="hdId" value="@objModel.TransporterID" type="hidden" />
                    @objModel.Transporter_name
                </td>
                <td style="text-align: left">                   
                    @objModel.Transporter_address
                </td>
                <td style="text-align: left">                   
                    @objModel.Transporter_phone_no
                </td>
            </tr>
        }
    }
    catch (Exception ex)
    {
        <tr>
            <td style="text-align: center" colspan="3"></td>
        </tr>
    }
</table>
</div>
