@using (Html.BeginForm("Index", "CircleWiseRequisitionStock", FormMethod.Post))
{
    <div class="panel-heading">
        <h3 class="panel-title"><strong>Circle Wise School Enrolled Report</strong> </h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label class="col-md-1 col-xs-6 control-label">@Html.Label("District")</label>
            <div class="col-md-3 col-xs-12">
                @Html.DropDownListFor(a => a.district_id, new SelectList(Model.districtcollectionlist, "DistrictID", "District_name"), "Select", new { @class = "form-control select2" })

            </div>
        </div>
    </div>
    <div class="panel-heading">
        <button type="submit" id="btnSave" name="Command" value="Save" class="btn btn-mini btn-danger">Show</button>
    </div>
    <div class="panel-heading">
        <a class="btn btn-mini btn-danger" href="#" onclick="$('#tableID').tableExport({type:'excel',escape:'false'});">Export to Excel</a>
    </div>
    <div class="panel-body">
        <table id="tableID" class="table datatable" style="margin-left: 0px;" width="100%">
            <tr>
                <td style="text-align: left">District Name</td>
                <td style="text-align: left">Circle Name</td>
                <td style="text-align: center">No of School Enrolled</td>
            </tr>
            @try
            {
                for (int i = 0; i < Model.circlewisecollection.Count; i++)
                {
                <tr>
                    <td style="text-align: left">@Model.circlewisecollection[i].district_name</td>
                    <td style="text-align: left">@Model.circlewisecollection[i].circle_name</td>
                    <td style="text-align: center">@Model.circlewisecollection[i].no_of_school_cnf</td>
                </tr>
                }
            }
            catch (Exception ex)
            {
                <tr>
                    <td style="text-align: center"></td>
                    <td style="text-align: center"></td>
                    <td style="text-align: center"></td>
                </tr>
            }
        </table>
    </div>
}

@section scripts {
    <script type='text/javascript' src='/resources/js/plugins/tableexport/tableExport.js'></script>
    <script type='text/javascript' src='/resources/js/plugins/tableexport/jquery.base64.js'></script>
    <script type='text/javascript' src='/resources/js/plugins/tableexport/html2canvas.js'></script>
}